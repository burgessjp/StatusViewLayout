<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/status_view_btn_reload"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/status_view_icon_no_network" />

    <TextView
        android:id="@id/status_view_tv_no_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/status_view_icon_text_gap"
        android:text="@string/status_view_net_exception_text"
        android:textColor="@color/status_view_text_color"
        android:textSize="16sp" />
</LinearLayout>